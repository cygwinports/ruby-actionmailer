inherit rubygem

NAME="ruby-actionmailer"
VERSION=5.1.6
RELEASE=1
CATEGORY="Ruby"
SUMMARY="Ruby Action Mailer extension"
DESCRIPTION="Email on Rails. Compose, deliver, receive, and test emails using
the familiar controller/view pattern. First-class support for multipart email
and attachments."

ARCH=noarch

PKG_NAMES="${NAME} ${NAME}-doc"
ruby_actionmailer_CONTENTS="${RUBYGEM_INSTDIR#/} ${RUBYGEM_SPEC#/}"
ruby_actionmailer_doc_CONTENTS=${RUBYGEM_DOCDIR#/}
